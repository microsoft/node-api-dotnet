                    </GeometryGroup>
                </Path.Data>
            </Path>
            <Path Visibility="Collapsed" Fill="Purple">
                <Path.Data>
                    <GeometryGroup FillRule="Nonzero">
                        <EllipseGeometry Center="0,8" RadiusX="7" RadiusY="7"/>
                        <RectangleGeometry Rect="-2,-14,4,18" />
                    </GeometryGroup>
                </Path.Data>
            </Path>
            <Path Visibility="Collapsed" Fill="Maroon">
